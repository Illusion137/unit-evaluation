[
    {
        "name": "Snell's Law",
        "latex": "n_1 \\sin(\\theta_1) = n_2 \\sin(\\theta_2)",
        "variables": [
            { "name": "n_1", "unit": [0, 0, 0, 0, 0, 0, 0], "description": "Refractive index of medium 1", "constant": false },
            { "name": "\\theta_1", "unit": [0, 0, 0, 0, 0, 0, 0], "description": "Angle of incidence", "constant": false },
            { "name": "n_2", "unit": [0, 0, 0, 0, 0, 0, 0], "description": "Refractive index of medium 2", "constant": false },
            { "name": "\\theta_2", "unit": [0, 0, 0, 0, 0, 0, 0], "description": "Angle of refraction", "constant": false }
        ]
    },
    {
        "name": "Mirror/Lens Equation",
        "latex": "\\frac{1}{f} = \\frac{1}{d_o} + \\frac{1}{d_i}",
        "variables": [
            { "name": "f", "unit": [1, 0, 0, 0, 0, 0, 0], "description": "Focal length", "constant": false },
            { "name": "d_o", "unit": [1, 0, 0, 0, 0, 0, 0], "description": "Object distance", "constant": false },
            { "name": "d_i", "unit": [1, 0, 0, 0, 0, 0, 0], "description": "Image distance", "constant": false }
        ]
    },
    {
        "name": "Magnification",
        "latex": "M = \\frac{d_i}{d_o}",
        "variables": [
            { "name": "M", "unit": [0, 0, 0, 0, 0, 0, 0], "description": "Magnification", "constant": false },
            { "name": "d_i", "unit": [1, 0, 0, 0, 0, 0, 0], "description": "Image distance", "constant": false },
            { "name": "d_o", "unit": [1, 0, 0, 0, 0, 0, 0], "description": "Object distance", "constant": false }
        ]
    },
    {
        "name": "Magnification (Height)",
        "latex": "M = \\frac{h_i}{h_o}",
        "variables": [
            { "name": "M", "unit": [0, 0, 0, 0, 0, 0, 0], "description": "Magnification", "constant": false },
            { "name": "h_i", "unit": [1, 0, 0, 0, 0, 0, 0], "description": "Image height", "constant": false },
            { "name": "h_o", "unit": [1, 0, 0, 0, 0, 0, 0], "description": "Object height", "constant": false }
        ]
    },
    {
        "name": "Lensmaker's Equation",
        "latex": "\\frac{1}{f} = (n - 1)\\left(\\frac{1}{R_1} - \\frac{1}{R_2}\\right)",
        "variables": [
            { "name": "f", "unit": [1, 0, 0, 0, 0, 0, 0], "description": "Focal length", "constant": false },
            { "name": "n", "unit": [0, 0, 0, 0, 0, 0, 0], "description": "Refractive index", "constant": false },
            { "name": "R_1", "unit": [1, 0, 0, 0, 0, 0, 0], "description": "Radius of curvature 1", "constant": false },
            { "name": "R_2", "unit": [1, 0, 0, 0, 0, 0, 0], "description": "Radius of curvature 2", "constant": false }
        ]
    },
    {
        "name": "Critical Angle",
        "latex": "\\sin(\\theta_c) = \\frac{n_2}{n_1}",
        "variables": [
            { "name": "\\theta_c", "unit": [0, 0, 0, 0, 0, 0, 0], "description": "Critical angle", "constant": false },
            { "name": "n_2", "unit": [0, 0, 0, 0, 0, 0, 0], "description": "Refractive index of less dense medium", "constant": false },
            { "name": "n_1", "unit": [0, 0, 0, 0, 0, 0, 0], "description": "Refractive index of denser medium", "constant": false }
        ]
    },
    {
        "name": "Brewster's Angle",
        "latex": "\\tan(\\theta_B) = \\frac{n_2}{n_1}",
        "variables": [
            { "name": "\\theta_B", "unit": [0, 0, 0, 0, 0, 0, 0], "description": "Brewster's angle", "constant": false },
            { "name": "n_2", "unit": [0, 0, 0, 0, 0, 0, 0], "description": "Refractive index of medium 2", "constant": false },
            { "name": "n_1", "unit": [0, 0, 0, 0, 0, 0, 0], "description": "Refractive index of medium 1", "constant": false }
        ]
    },
    {
        "name": "Index of Refraction",
        "latex": "n = \\frac{c}{v}",
        "variables": [
            { "name": "n", "unit": [0, 0, 0, 0, 0, 0, 0], "description": "Refractive index", "constant": false },
            { "name": "c", "unit": [1, -1, 0, 0, 0, 0, 0], "description": "Speed of light", "constant": true },
            { "name": "v", "unit": [1, -1, 0, 0, 0, 0, 0], "description": "Speed of light in medium", "constant": false }
        ]
    }
]
